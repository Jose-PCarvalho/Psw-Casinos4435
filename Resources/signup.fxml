<AnchorPane style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Signup">
   <children>
      <ImageView fitHeight="700.0" fitWidth="1400.0" layoutX="2.0" layoutY="1.0" pickOnBounds="true" preserveRatio="false">
         <image>
            <Image url="@GeneralAssets/RR-Table-Games-07-scaled.jpg" />
         </image>
      </ImageView>
      <Label layoutX="14.0" layoutY="14.0" prefHeight="59.0" prefWidth="269.0" text="Casinos 4435" textFill="WHITE">
         <font>
            <Font name="System Bold" size="41.0" />
         </font>
      </Label>
      <TextField fx:id="NameField" layoutX="13.0" layoutY="82.0" prefHeight="40.0" prefWidth="350.0" promptText="Name" style="-fx-background-radius: 20;" />
      <TextField fx:id="usernameField" layoutX="13.0" layoutY="204.0" prefHeight="40.0" prefWidth="350.0" promptText="Username" style="-fx-background-radius: 20;" />
      <Button fx:id="CreateAccBut" layoutX="79.0" layoutY="328.0" mnemonicParsing="false" onAction="#CreateAccount" prefHeight="40.0" prefWidth="217.0" style="-fx-background-color: grey; -fx-background-radius: 15;" text="Create Account" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font size="21.0" />
         </font>
      </Button>
      <Button fx:id="GoBackBut" layoutX="148.0" layoutY="392.0" mnemonicParsing="false" onAction="#GoBack" prefHeight="40.0" prefWidth="80.0" style="-fx-background-color: grey; -fx-background-radius: 15;" text="Cancel" textFill="WHITE">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <font>
            <Font size="18.0" />
         </font></Button>
      <DatePicker fx:id="AgeBD" layoutX="13.0" layoutY="143.0" prefHeight="40.0" prefWidth="350.0" promptText="Birthday" />
      <Label fx:id="CAError" alignment="CENTER" contentDisplay="CENTER" layoutX="13.0" layoutY="450.0" prefHeight="41.0" prefWidth="350.0" style="-fx-background-color: brown; -fx-background-radius: 15;" textFill="WHITE" visible="false">
         <font>
            <Font name="Arial" size="20.0" />
         </font>
      </Label>
      <AnchorPane fx:id="AgeError" layoutX="457.0" layoutY="201.0" prefHeight="345.0" prefWidth="490.0" style="-fx-background-color: lightyellow; -fx-background-radius: 20;" visible="false">
         <children>
            <Label alignment="CENTER" layoutX="16.0" layoutY="11.0" prefHeight="225.0" prefWidth="456.0" text="You are too young to play this &#10;game.&#10;&#10;Now exiting the App.">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Button fx:id="AgeOk" layoutX="173.0" layoutY="264.0" mnemonicParsing="false" onMouseClicked="#quit" prefHeight="51.0" prefWidth="143.0" style="-fx-background-color: green; -fx-background-radius: 20;" text="OK" textFill="WHITE">
               <font>
                  <Font size="24.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </AnchorPane>
      <PasswordField fx:id="PasswordField" layoutX="13.0" layoutY="268.0" prefHeight="40.0" prefWidth="350.0" promptText="Password" style="-fx-background-radius: 20;" />
   </children>
   <padding>
      <Insets bottom="3.0" right="1.0" />
   </padding>
</AnchorPane>
